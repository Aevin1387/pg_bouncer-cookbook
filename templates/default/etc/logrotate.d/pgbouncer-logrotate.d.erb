# Rotate postgresql log files

<%= @instance['log_dir'] %>/pgbouncer-<%= @name %>.log {
  daily
  copytruncate
  missingok
  start 0
  rotate 7
  compress
  sharedscripts
  postrotate
    /bin/kill -HUP `cat <%= @instance['pid_dir'] %>/pgbouncer-<%= @name %>.pid 2>/dev/null` 2> /dev/null || true
  endscript
}
